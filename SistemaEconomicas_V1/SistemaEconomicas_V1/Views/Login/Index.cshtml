@{ Layout = null; }
<!DOCTYPE html>
<html>

<head>

    <meta name="viewport" content="width=device-width" />
    <title>Escuela de Ciencias Economicas</title>
    <link href="/css/bootstrap.css" rel="stylesheet" />
    <script src="/js/jquery-1.10.2.js"></script>
    <script src="/Scripts/toastr.js"></script>
    <link href="/Content/toastr.css" rel="stylesheet" />
    <style type="text/css">

        body {
            background: url(../Images/Facultad.png) round no-repeat;
            padding: 0px !important;
            margin: 0px !important;
            width: 100%;
            height: 100%;
        }
    </style>
</head>
<body>
    @using (Html.BeginForm("Index", "Login", FormMethod.Post, new { @class = "show_modal", enctype = "multipart/form-data" }))
    {
        <div class="container">

            <div class="row">
                <div class="col-xs-4"><br /></div>
                <div class="col-xs-4 text-center" style="">
                    <br />
                    <div class="col-lg-12 text-center" style="background: url(/Images/opacity.png) repeat; margin-bottom: 0;">
                        <h4 style="padding: 10px; margin-bottom: 0; color: #FFF;">Facultad de Ciencias Economicas</h4>
                    </div>
                    <div class="col-lg-12 text-center" style="background: url(/Images/opacity2.png) repeat;">
                        <br />
                        <div class="row">
                            <div class="col-md-12 text-center">

                                <img src="/Images/usac.png" height="45" alt="Ciencias Economicas Logo" title="" />
                            </div>
                        </div>

                        <br /><br />
                        <div class="row">
                            <div class="col-md-1 text-center"></div>
                            <div class="col-md-10 text-center">
                                <div class="form-group">
                                    <div class="col-md-12 input-group secondary">
                                        <br />
                                        <input name="UserId" class="form-control" id="UserId" type="text" placeholder="Nombre de usuario" />
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-1 text-center"></div>
                        </div>

                        <div class="row">
                            <div class="col-md-1 text-center"></div>
                            <div class="col-md-10 text-center">
                                <div class="form-group">
                                    <div class="col-md-12 input-group secondary">
                                        <br />
                                        <input name="PassId" class="form-control" id="PassId" type="text" placeholder="Contraseña" />
                                    </div>
                                </div>

                            </div>
                            <div class="col-md-1 text-center"></div>
                        </div>

                        <br />
                        <div class="row">
                            <div class="col-md-1 text-center"></div>
                            <div class="col-md-10 text-center">
                                <button type="submit" class="btn btn-success btn-icon" style="width: 70%;">
                                    <span><b>Iniciar Sesión</b></span>
                                </button>

                                <br />
                                <hr style="color: #FFF;" width="75%" />
                                <a href="@Url.Action("Restore", "Login")" style="color: #FFF; text-decoration: none;">
                                    <span>¿Ha olvidado su contraseña o usuario?</span>
                                </a>

                                <br />
                                <h4 style="padding: 10px; margin-bottom: 0; color: #FFF; font-size: 12px;">
                                    Powered by &copy; Analisis 2 - Grupo No. 5
                                </h4>
                            </div>
                            <div class="col-md-1 text-center"></div>
                        </div>

                        <br />
                    </div>
                </div>
                <div class="col-xs-4"><br /></div>
            </div>

        </div>
    }
    <script>
        $(function(){
            var msg = "@(TempData["MsgErr"] as string)";
            if (msg !== "") {
                toastr.error(msg);
            }
        });
    </script>
   
</body>
</html>
