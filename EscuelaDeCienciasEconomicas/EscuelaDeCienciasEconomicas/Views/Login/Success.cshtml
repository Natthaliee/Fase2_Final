@model RaptorENEL_V._1._0.Models.Login
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Raptor Enel</title>

    @Styles.Render("~/css/css")

    @Scripts.Render("~/bundles/jquery")

    <style type="text/css">
        body {
            background: url(../Images/loginbk.jpg) round no-repeat;
            padding: 0px !important;
            margin: 0px !important;
            width: 100%;
            height: 100%;
        }
    </style>

</head>
<body>
    @using (Html.BeginForm("index", "Login", FormMethod.Get, new { id = "success_user_validate", name= "success_user_validate", novalidate = "novalidate" }))
    {
        <div class="container">

            <div class="row">
                <div class="col-xs-2"><br /></div>
                <div class="col-xs-8 text-center" style="">
                    
                    <br />
                    <div class="col-lg-12 text-center" style="background: url(../Images/opacity.png) repeat; margin-bottom: 0;">
                        <h4 style="padding: 10px; margin-bottom: 0; color: #FFF;">Raptor</h4>
                    </div>
                    
                    <div class="col-lg-12 text-center" style="background: url(../Images/opacity2.png) repeat;">
                        
                        <br />
                        <div class="row">
                            <div class="col-md-12 text-center">
                                <img src="../Images/EnelLogo1v0.png" height="45" alt="Raptor Enel Logo" title="" />
                            </div>
                        </div>

                        <br /><br />

                        <div class="row">
                            <div class="col-md-1 text-center"></div>
                            <div class="col-md-10 text-center">
                                
                                <h3 style="color: #FFFFFF;">@(TempData["MsgTitle"] as string)</h3>

                                <br />
                                <p style="color: #FFFFFF;">
                                    @(new HtmlString(TempData["Msg"] as string))
                                </p>

                            </div>
                            <div class="col-md-1 text-center"></div>
                        </div>

                        <br />
                        <div class="row">
                            <div class="col-md-3 text-center"></div>
                            <div class="col-md-6 text-center">
                                <button type="submit" class="btn btn-default btn-icon" style="width: 100%;">
                                    <span><b>Regresar</b></span>
                                </button>
                            </div>
                            <div class="col-md-3 text-center"></div>
                        </div>

                        <br /><br />
                    </div>
                </div>
                <div class="col-xs-2"><br /></div>
            </div>

        </div>
    }
    
    @Scripts.Render("~/bundles/bootstrap")
        
</body>
</html>
