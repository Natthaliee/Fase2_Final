@model RaptorENEL_V._1._0.Models.Login
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Raptor Enel</title>

    @Styles.Render("~/css/css")

    @Scripts.Render("~/bundles/jquery")

    <style type="text/css">
        body {
            background: url(../Images/loginbk.jpg) round no-repeat;
            padding: 0px !important;
            margin: 0px !important;
            width: 100%;
            height: 100%;
        }
    </style>

</head>
<body>
    <script>
        $(function(){
            var msg = "@(TempData["MsgErr"] as string)";
            if (msg !== "") {
                toastr.error(msg);
            }
        });
    </script>
    @using (Html.BeginForm("Config", "Login", FormMethod.Post, new { id = "config_user_validate", name= "config_user_validate", novalidate = "novalidate" }))
    {
        <div class="container">

            <div class="row">
                <div class="col-xs-4"><br /></div>
                <div class="col-xs-4 text-center" style="">
                    
                    <br />
                    <div class="col-lg-12 text-center" style="background: url(../Images/opacity.png) repeat; margin-bottom: 0;">
                        <h4 style="padding: 10px; margin-bottom: 0; color: #FFF;">Raptor</h4>
                    </div>
                    
                    <div class="col-lg-12 text-center" style="background: url(../Images/opacity2.png) repeat;">
                        
                        <br />
                        <div class="row">
                            <div class="col-md-12 text-center">
                                <img src="../Images/EnelLogo1v0.png" height="45" alt="Raptor Enel Logo" title="" />
                            </div>
                        </div>

                        <br /><br />
                        <div class="row">
                            <div class="col-md-1 text-center"></div>
                            <div class="col-md-10 text-center">
                                <div class="form-group">
                                    <div class="col-md-12 input-group secondary">
                                        <span class="input-group-addon">
                                            <span class="arrow"></span>
                                            <i class="fa fa-key" style="color: #555555 !important;"></i>
                                        </span>
                                        @Html.EditorFor(model => model.password, new { htmlAttributes = new { @class = "form-control", type = "password", name = "password", id = "password", placeholder = "Contraseña" } })

                                    </div>
                                </div>
                            </div>
                            <div class="col-md-1 text-center"></div>
                        </div>

                        <div class="row">
                            <div class="col-md-1 text-center"></div>
                            <div class="col-md-10 text-center">
                                <div class="form-group">
                                    <div class="col-md-12 input-group secondary">
                                        <span class="input-group-addon">
                                            <span class="arrow"></span>
                                            <i class="fa fa-key" style="color: #555555 !important;"></i>
                                        </span>
                                        @Html.Editor("passwordConfirm", new { htmlAttributes = new { @class = "form-control", type = "password", name = "passwordConfirm", id = "passwordConfirm", placeholder = "Confirmar contraseña" } })

                                    </div>
                                </div>
                            </div>
                            <div class="col-md-1 text-center"></div>
                        </div>

                        <br />
                        <div class="row">
                            <div class="col-md-1 text-center"></div>
                            <div class="col-md-10 text-center">
                                <button type="submit" class="btn btn-info btn-icon" style="width: 90%">
                                    <span><b>Guardar Contraseña</b></span>
                                </button>

                                <br /><br />
                                <button type="button" class="btn btn btn-default btn-icon" style="width: 90%" onclick="location.href='@Url.Action("Index", "Login")'; return false;">
                                    <span><b>Regresar</b></span>
                                </button>

                                <br />
                                <hr style="color: #FFF;" width="75%" />
                                <p style="color: #FFFFFF; text-align: left; font-size: 11px; padding-left: 10px;">
                                    *La contraseña debe tener entre 8 y 15 carácteres. <br />
                                    *La contraseña debe contener al menos <br />
                                    1 número, 1 mayúscula, 1 minúscula y <br />
                                    1 carácter especial.
                                </p>
                                <input type="hidden" id="id" name="id" value="@Request.Params["key"]" />
                            </div>
                            <div class="col-md-1 text-center"></div>
                        </div>

                        <br /><br />
                    </div>
                </div>
                <div class="col-xs-4"><br /></div>
            </div>

        </div>
    }
    <br /><br />

    @Scripts.Render("~/bundles/bootstrap")
        
</body>
</html>
