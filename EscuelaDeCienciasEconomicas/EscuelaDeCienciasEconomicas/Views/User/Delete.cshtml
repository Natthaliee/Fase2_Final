@using RaptorENEL_V._1._0.DAL;
@using RaptorENEL_V._1._0.Models;
@model RaptorENEL_V._1._0.Models.User

@{
    ViewBag.ContentTitle = "USUARIOS";
    ViewBag.SectionTitle = "¿Está seguro de eliminar este usuario?";
    ViewBag.breadcrumblist = "<li><a href='/User'><i class='fa fa-user' style='color: dodgerblue;'></i> Usuarios</a></li><li><a href='#'><i class='fa fa-trash-o' style='color: dodgerblue;'></i> Eliminar</a></li>";
    ViewBag.mnOptID = "optUsuarios";
}

<div>
    
    <dl class="dl-horizontal">
        <dt>
            Nombre de usuario
        </dt>

        <dd>
            @Html.DisplayFor(model => model.username)
        </dd>
        
        <dt>
           Constraseña
        </dt>

        <dd>
            @Html.DisplayFor(model => model.password)
        </dd>

        <br />
        <h4>Información personal</h4>
        <hr class="division" width="25%" />

        <dt>
           Nombres
        </dt>

        <dd>
            @Html.DisplayFor(model => model.first_name)
        </dd>

        <dt>
            Apellidos
        </dt>

        <dd>
            @Html.DisplayFor(model => model.last_name)
        </dd>

        <dt>
            Correo electrónico
        </dt>

        <dd>
            @Html.DisplayFor(model => model.email)
        </dd>

        <br />
        <h4>Permisos</h4>
        <hr class="division" width="25%" />

        @{
            RaptorContext db = new RaptorContext();
            Role rol = db.Role.Where(c => c.id == Model.role_id).SingleOrDefault();
        }

        <dt>
            Rol
        </dt>

        <dd>
            @Html.DisplayFor(model => rol.name)
        </dd>

        <dt>
            Es staff
        </dt>

        <dd>
            @Html.DisplayFor(model => model.is_staff)
        </dd>
        
        <dt>
            Activo
        </dt>

        <dd>
            @Html.DisplayFor(model => model.is_active)
        </dd>

    </dl>

    <hr class="division" style="margin-bottom: 15px;" width="100%" />

    @using (Html.BeginForm("Delete", "User", FormMethod.Post, new { @class = "show_modal" })) {
                @Html.AntiForgeryToken()

        <div class="col-xs-12 col-sm-9 col-md-8 padding-bottom-30">
            <div class="text-left">
                <a class="btn btn-secondary btn-icon bottom15 right15 show_modal" href="@Url.Action("Index","User")">
                    <i class="fa fa-arrow-left"></i>
                    <span class="title">Regresar</span>
                </a>

                <button type="submit" class="btn btn-danger btn-icon bottom15 right15">
                    <i class="fa fa-trash-o"></i> &nbsp; <span>Eliminar</span>
                </button>
            </div>
        </div>

    }


</div>

